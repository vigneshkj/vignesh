#include<stdio.h>
#include<conio.h>
{
int main()
{
int N, A, D,;
int sum = 0;
printf("Enter the first term value of the N. series");
scanf("%d", &a);
printf("Enter the total numbers in the A. series");
scanf("%d", &n);
printf("Enter the common difference of D. series");
scanf("%d", &d);
sum = (n * (2 * a + (n - 1)* d ))/ 2;
tn = a + (n - 1) * d;
printf("Sum of the A.P series is");
for (i = a; i <= tn; i = i + d )
{
if (i != tn)
printf("%d + ", i);
else
printf("%d = %d ", i, sum);
}
return 0;
}
